[flake8]
max-line-length = 160
exclude =
    # There's no value in checking cache directories
    __pycache__,
    # The miration files are mostly autogenerated, ignore it
    camomilla/migrations,

per-file-ignores =
    # imported but unused
    __init__.py: F401,F403
    camomilla/fields.py: F811,C901
    camomilla/context/autodiscover.py: C901
    camomilla/structured/cache.py: C901
    camomilla/utils/translation.py: W605

max-complexity = 12